{% extends 'base.html.twig' %}

{% block title %}Restaurant tables create/edit{% endblock %}

{% block body %}
    <div class="m-4 col-lg-4">
        {{ form_start(tableForm) }}
        <div class="form-group">
            {{ form_label(tableForm.number) }}
            {{ form_widget(tableForm.number, {'attr' : {'class' : 'form-control'}} ) }}
            <div class="alert-danger">
                {{ form_errors(tableForm.number) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(tableForm.capacity) }}
            {{ form_widget(tableForm.capacity, {'attr' : {'class' : 'form-control'}} ) }}
            <div class="alert-danger">
                {{ form_errors(tableForm.capacity) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(tableForm.active) }}
            {{ form_widget(tableForm.active, {'attr' : {'class' : 'form-control'}} ) }}
            <div class="alert-danger">
                {{ form_errors(tableForm.active) }}
            </div>
        </div>

        {{ form_row(tableForm.save, {'attr' : {'class' : 'btn btn-primary'}}) }}
        {{ form_end(tableForm) }}
    </div>
{% endblock %}
