{% extends 'base.html.twig' %}

{% block title %}Hello RestaurantController!{% endblock %}

{% block body %}
    <table class="table">
        <tbody>
        <tr>
            <th scope="row">ID</th>
            <th scope="row">Title</th>
            <th scope="row">Photo</th>
            <th scope="row">Active</th>
            <th scope="row">Active tables</th>
            <th scope="row">Edit</th>
            <th scope="row">Delete</th>
        </tr>
        {% for restaurant in restaurants  %}
            <tr>
                <td>{{ restaurant.0.id }}</td>
                <td>{{ restaurant.0.title }}</td>
                <td>
                {% if restaurant.0.photo %}
                    <img src="{{ vich_uploader_asset(restaurant.0, 'uploadedPhoto') }}" alt="{{ restaurant.0.title }}" />
                {% endif %}
                </td>
                <td>{{ restaurant.0.active == 1 ? 'Yes' : 'No' }}</td>
                <td>{{ restaurant.Count }}</td>
                <td>
                    <a href="{{ path('restaurant_edit', {'id': restaurant.0.id}) }}"><span class="badge badge-info">EDIT</span></a>
                </td>
                <td>
                    <a href="{{ path('restaurant_delete', {'id': restaurant.0.id}) }}"><span class="badge badge-danger">DELETE</span></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div>
        <a href="{{ path('restaurant_create') }}"><span class="badge badge-primary">NEW RESTAURANT</span></a>
    </div>
{% endblock %}
